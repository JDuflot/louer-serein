{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
	<section class="container my-3">
		<div class="row">
			<div class="col">
				{# <h1>Inscription :</h1> #}

				{{ form_errors(registrationForm) }}
				{{ form_start(registrationForm) }}
                    <fieldset>
                    <legend>Mon identité </legend>
				    {{ form_row(registrationForm.lastname) }}
                    {{ form_row(registrationForm.firstname) }}
                    {{ form_row(registrationForm.email) }}
                    </fieldset>
                    <fieldset>
                    <legend>Mes Coordonnées</legend>
                    {{ form_row(registrationForm.address) }}
                    {{ form_row(registrationForm.zip) }}
                    {{ form_row(registrationForm.city) }}
                    </fieldset>
                    
				{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
				
				<input type="file" class="my-3" {{ form_row(registrationForm.picture) }} >
				
				{{ form_row(registrationForm.RGPDConsent) }}
				{{ form_end(registrationForm) }}

				<button type="submit" class="btn my-3 btn-outline-primary">M'inscrire</button>
			</div>
		</div>
	</section>
{% endblock %}

