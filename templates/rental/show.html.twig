    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rental.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ rental.title }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ rental.cover }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ rental.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ rental.price }}</td>
            </tr>
            <tr>
                <th>Location</th>
