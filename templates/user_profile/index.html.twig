{% extends 'base.html.twig' %}


{% block title %}Mon profil
{% endblock %}


{% block body %}
	{# <div id="react-navbar"></div> #}

	<h2>Mon compte utilisateur</h2>
	
	<div class="main">

		{% if app.user %}
		 <div class="perso">
			<div class="perso-name">
				<img src={{user.picture}} alt="" class="perso-picture" alt="">
				<h3>{{ user.firstname }} {{ user.lastname }}</h3>
			</div>
			<div class="perso-info">
				<p>{{ user.email }}</p>
			</div>
		
			 <div class="perso-info">
				<p>{{ user.address }}</p>
			</div>
			<div class="perso-info">
				<p>{{ user.zip }}</p>
			</div>
			<div class="perso-info">
				<p>{{ user.city }}</p> 
			</div>
			<div class="perso-actions">
				<button class=" perso-btn-edit">Modifier</button>
				<button class=" perso-btn-edit">Annuler</button>
				<button class=" perso-btn-edit">Enregistrer</button>
			</div>
		</div>
		{% endif %}

		<div class="rental">
			<h2>Ma location</h2>
			<div class="user-rating">
			{% for rentals in user.rentals %}
				<div class="rating">
					<div class="rating-details">
					<img src={{rentals.cover}} class="rating-img" alt="">
					<p class="rating-location">{{rentals.location}}</p>
					</div>
					<div class="rating-txt">
						<p class="rating-desc">{{ rentals.description}}</p>
					</div>
				</div>
			
			</div>
			{# <div class="rental-actions">
			<a class="btn btn-add-rental" href="{{ path('app_rental_new') }}">Ajouter une location</a>
			<a class="btn btn-add-rental" href="{{ path('{reactrouting}/{{rentals.id}}') }}">Voir la location</a>
			<a class="btn btn-add-rental" href="#">Supprimer ma location</a>
			</div> #}
			{% endfor %}
		</div>

	</div>


{% endblock %}
